# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/web3safetykit

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key

# API Server Port
API_PORT=3001

# Telegram Bot Token for notifications
TELEGRAM_BOT_TOKEN=

# Block Explorer API Keys
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=
ARBITRUM_API_KEY=
BASESCAN_API_KEY=
ZKSYNC_API_KEY=

# Google Gemini API Key for AI analysis
GEMINI_API_KEY=

# --- Application Settings ---

# The maximum number of transactions to fetch during the initial scan of a new wallet.
INITIAL_SCAN_MAX_TX=1000

# The number of seconds before a request to an external API times out.
REQUEST_TIMEOUT_SECONDS=120

# --- Optional Rate Limiting Settings ---
# The defaults are generally safe, but you can override them here.
# ETHERSCAN_RATE_LIMIT_SECOND=5
# GEMINI_RATE_LIMIT_MINUTE=50